---
import '../styles/global.css'

const pageTitle = 'About Me';

const identity = {
	fullName: 'Guramandeep Gill',
	country: 'Canada',
	occupation: 'Web Developer',
	hobbies: ['coding', 'basketball']
};

const skills = ['HTML', 'CSS', 'JavaScript', 'React', 'Astro'];

const happy = true;
const finished = false;
const goal = 3;

const skillColor = 'navy';
const fontWeight = 'bold';
const textCase = 'uppercase';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
		<style define:vars={{skillColor, fontWeight, textCase}}>
			h1 {
				color: purple;
				font-size: 4rem;
			}
			.skill {
				color: var(--skillColor);
				font-weight: var(--fontWeight);
				text-transform: var(--textCase);
			}
		</style>
	</head>
	<body>
		<a href="/">Home</a>
		<a href="/about/">About</a>
		<a href="/blog/">Blog</a>

		<h1>{pageTitle}</h1>
		<p>... and my new Astro site!</p>
		{happy && <p>I'm happy to be learning Astro!</p>}
		{finished && <p>I finished this tutorial!</p>}
		{goal === 3 ? <p>My goal is to finish in {goal} days.</p> : <p>My goal is not 3 days.</p>}

		<p>Some info about me:</p>
		<ul>
			<li>Name: {identity.fullName}</li>
			<li>I live in {identity.country}</li>
			<li>Hobbies: {identity.hobbies.join(', ')}</li>
		</ul>
		<p>My skills are:</p>
		<ul>
			{skills.map(skill => <li class="skill">{skill}</li>)}
		</ul>
	</body>
</html>
